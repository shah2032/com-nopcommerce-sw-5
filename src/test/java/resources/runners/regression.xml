<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" verbose="1">
    <groups>
        <run>
            <include name="regression"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.nopcommerce.demo.customerlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Regression Test">
        <classes>
          <class name="com.nopcommerce.demo.testsuite.ComputerMenu"></class>
          <class name="com.nopcommerce.demo.testsuite.ElectronicMenu"></class>
          <class name="com.nopcommerce.demo.testsuite.TopMenu"></class>
        </classes>
    </test>
</suite>